<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cambiar contrasena</title>

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type=password] {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
        }

        input[type=submit] {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #1d70a2;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Media Queries */
        @media screen and (max-width: 600px) {
            form {
                max-width: 100%;
                margin: 0;
                padding: 20px;
            }
        }
    </style>
</head>
<body>
<form action="{{ url }}" method="post">
    <label for="password">Introduzca su nueva contrasena</label>
    <input type="password" name="password" id="password" required>
    <input type="hidden" name="unique" value="{{ unique }}">
    <input type="submit" value="Cambiar contrasena">
</form>
</body>
</html>
